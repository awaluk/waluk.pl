{% if paginator.totalPages > 1 %}
    <ul class="post-list__pagination pagination">
        {% if paginator.previousPage %}
            <li class="pagination__item">
                <a href="{{ page_path(paginator.previousPage, category.slug ?? null) }}" class="pagination__link" title="Poprzednia strona">&laquo;</a>
            </li>
        {% endif %}

        {% for page in paginator.pagesRange(1) %}
            <li class="pagination__item">
                {% if page == paginator.currentPage %}
                    <span class="pagination__link pagination__link--active" title="Strona {{ page }}">{{ page }}</span>
                {% else %}
                    <a href="{{ page_path(page, category.slug ?? null) }}" class="pagination__link" title="Strona {{ page }}">{{ page }}</a>
                {% endif %}
            </li>
        {% endfor %}

        {% if paginator.nextPage %}
            <li class="pagination__item">
                <a href="{{ page_path(paginator.nextPage, category.slug ?? null) }}" class="pagination__link" title="NastÄ™pna strona">&raquo;</a>
            </li>
        {% endif %}
    </ul>
{% endif %}